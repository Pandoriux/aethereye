{
  "$schema": "https://schema.tauri.app/config/2",

  "productName": "AetherEye",
  "version": "0.1.0",
  "identifier": "sanctuary.pandoriux.aethereye",

  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "AetherEye",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",

    "publisher": "Pandoriux",
    "copyright": "Copyright Â© 2026 Pandoriux",
    "license": "AGPL-3.0-or-later",
    "homepage": "https://github.com/Pandoriux/aethereye",

    "licenseFile": "../LICENSE",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
